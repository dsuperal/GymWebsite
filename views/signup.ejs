<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <style>
        /* Navigation Bar Styling */
     .navigation_bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff0f5; /* Soft pink background for the bar */
            padding: 10px 20px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navigation_bar a {
            text-decoration: none;
            color: #ff69b4;
        }

        .logo {
            width: 90px;
            height: auto;
            border-radius: 50%;
        }

        .nav_bar_header h2 {
            display: inline-block;
            margin-left: 10px;
            font-size: 1.5em;
        }

        body {
            background-color: #fce4ec;
            font-family: 'Comic Sans MS', cursive, sans-serif;
            color: #ff4081;
        }

        .rform {
            text-align: center;
        }

        .sec2 {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }

        #register {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            max-width: 1200px;
            width: 100%;
            justify-content: space-between;
        }

        .input-field {
            flex: 1 1 30%;
            min-width: 250px;
            margin-bottom: 10px;
        }

        .input-field h2 {
            font-size: 18px;
            margin-bottom: 5px;
        }

        .input-field input, .input-field select {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 2px solid #ff4081;
            font-size: 16px;
        }

        button {
            background-color: #ff4081;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

        button[type="reset"] {
            margin-right: 10px;
        }
    </style>
</head>
<body>
     <!-- Navigation Bar -->
     <div class="navigation_bar">
        <!-- Logo and Title -->
        <span>
            <a class="nav_bar_header" href="/" style="text-decoration: none; color: inherit;">
                <img class="logo" src="/images/logo.png" alt="Gym Logo">
                <h2></h2>
            </a>
        </span>

        <!-- Navigation Options -->
        <div>
            <a href="/"> Home </a> | 
            <a href="/login"> Login </a> 
          

        </div>
    </div>
    
    <div class="rform">
        <h1>SignUp</h1>
    </div>
    <div class="sec2">
        <form id="register" action="/signup" method="POST">

            <div class="input-field">
                <h2>First Name</h2>
                <input type="text" name="first_name" placeholder="Enter your first name" required>
            </div>

            <div class="input-field">
                <h2>Last Name</h2>
                <input type="text" name="last_name" placeholder="Enter your last name" required>
            </div>

            <div class="input-field">
                <h2>Gender</h2>
                <select class="gender" name="gender" required>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Non-binary">Non-binary</option>
                </select>
            </div>
            

            <div class="input-field">
                <h2>Date of Birth</h2>
                <input type="date" name="dob" placeholder="Enter your date of birth" required>
            </div>

            <div class="input-field">
                <h2>Join Date</h2>
                <input type="date" name="join_date" placeholder="Enter your join date" required>
            </div>
            
            <div class="input-field">
                <h2>Payment Status</h2>
                <select class="paymentstatus" name="payment_status" required>
                    <option value="paid">Paid</option>
                    <option value="unpaid">Unpaid</option>
                </select>
            </div>
            

            <div class="input-field">
                <h2>Email</h2>
                <input type="email" name="email" placeholder="Enter your email" required>
            </div>

            <div class="input-field">
                <h2>Phone Number</h2>
                <input type="tel" name="phone_number" placeholder="Enter your phone number" required>
            </div>

            <div class="input-field">
                <h2>Street</h2>
                <input type="text" name="street" placeholder="Enter your street" required>
            </div>

            <div class="input-field">
                <h2>City</h2>
                <input type="text" name="city" placeholder="Enter your city" required>
            </div>

            <div class="input-field">
                <h2>State</h2>
                <input type="text" name="state" placeholder="Enter your state" required>
            </div>

            <div class="input-field">
                <h2>Zip Code</h2>
                <input type="text" name="zip" placeholder="Enter your zip code" required>
            </div>
            <div class="input-field">
                <h2>Password</h2>
                <input type="text" name="password" placeholder="Enter your password" required>
            </div>

            <div class="input-field">
                <button type="reset">Clear</button>
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>